<h1>Edit Your Preferences</h1>

<form>
  <!-- Format Selection -->
  <div class="form-group">
    <label for="format">Format:</label>
    <select id="format" name="format" class="form-control">
      <option value="dvd">DVD</option>
      <option value="blu-ray">Blu-ray</option>
      <option value="digital">Digital</option>
      <!-- Add more formats as needed -->
    </select>
  </div>

  <!-- Runtime Selection -->
  <div class="form-group">
    <label for="runtime">Runtime (minutes):</label>
    <input type="number" id="runtime" name="runtime" class="form-control" placeholder="Length in minutes">
  </div>

  <!-- Genre Selection -->
  <div class="form-group">
    <label for="genre">Genre:</label>
    <select id="genre" name="genre" class="form-control">
      <option value="action">Action</option>
      <option value="comedy">Comedy</option>
      <option value="drama">Drama</option>
      <option value="horror">Horror</option>
      <!-- Add more genres as needed -->
    </select>
  </div>

  <!-- Release Date Selection -->
  <div class="form-group">
    <label for="release-date">Release Date:</label>
    <input type="date" id="release-date" name="release-date" class="form-control">
  </div>

  <!-- Submit Button using .button-get-started -->
  <div class="form-group">
    <button type="submit" class="button-get-started">Save Preferences</button>
  </div>
</form>
