<div style="position:relative;">
  <h1 style="text-align: center; padding-top: 20px; padding-bottom: 10px; font-family: 'Yeseva One', serif;">Your Selection!</h1>

  <div class="d-flex flex-column align-items-center my-4">
    <% if @results.length < 3 %>
      <h1 style="font-family: 'Yeseva One', serif;">No result</h1>
    <% else %>
      <% @results.each do |movie_result| %>
        <%= render "result_movie", result: movie_result %>
      <% end %>
    <% end %>
    <div class="generate-button-container">
      <div class="generate-button">
        <%= link_to 'Back to selection menu', preferences_path, class: 'button-get-started' %>
      </div>
    </div>
  </div>
</div>
